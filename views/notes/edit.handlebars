<div class="card card-body">
    <div class="mb-2">        
        <span class="h3"><i class="fa fa-pencil"></i> Edit Note</span>
    </div>
    {{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{/each}}
    <form action="/notes/edit" method="post">
        <input type="hidden" value="{{note.id}}" name="id">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" value="{{note.title}}">
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" name="content" rows="5">{{note.content}}</textarea>
        </div>
        <div class="form-group">
            <label for="tags">Tags</label>
            <input type="text" class="form-control" name="tags" value="{{note.tags}}">
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <button type="submit" class="btn btn-success btn-lg btn-block">
                    <i class="fa fa-save mr-2"></i>SAVE
                </button>
            </div>
            <div class="col-sm-4">
                <a href="/notes" class="btn btn-danger btn-lg btn-block">
                    <i class="fa fa-remove mr-2"></i>CANCEL
                </a>
            </div>
        </div>
    </form>
</div>