<div class="hide-mobile">    
    {{#if notes}}
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-center" style="width: 20px">
                    <a href='/notes/add' class="btn btn-primary">
                        <i class="fa fa-plus"></i>
                    </a>
                </th>
                <th style="width: 30px">Title</th>
                <th style="width: 40px">Content</th>
                <th style="width: 30px">Update Date</th>
            </tr>
        </thead>
        <tbody>
            {{#each notes}}
            <tr>
                <td class="text-center">
                    <a class="nav-link d-inline mx-0 px-0" href="/notes/edit/{{id}}">
                        <i class="fa fa-pencil fa-lg text-primary d-inline"></i>
                    </a>
                    <form action="/notes/delete" method="post" name="delete-{{id}}" class="d-inline">
                        <input type="hidden" name="note_id" value="{{id}}">
                        <a href="javascript:document.forms['delete-{{id}}'].submit()">
                            <i class="fa fa-trash-o fa-lg text-danger ml-2"></i>
                        </a>
                    </form>
                </td>
                <td>{{title}}</td>
                <td>{{content}}</td>
                <td>{{updated_date}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class="alert alert-primary">
        <p class="lead">Add your first note!</p>
        <a href='/notes/add' class="btn btn-lg btn-primary">Add Note</a>
    </div>
    {{/if}}
</div>